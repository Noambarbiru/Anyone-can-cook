<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_menu_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d000000"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/popup_window_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/close_window_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="10dp"
                android:backgroundTint="@color/red_dark"
                android:backgroundTintMode="src_over"
                android:clickable="true"
                android:src="@drawable/close_window_icon"
                app:borderWidth="0dp"
                app:fabCustomSize="50dp"
                app:maxImageSize="40dp"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/red_dark">
            <Switch
                android:id="@+id/visionImpairedModeChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red_dark"
                android:fontFamily="sans-serif-medium"
                android:switchPadding="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Vision Impaired Mode"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:thumb="@drawable/switch_thumb_selector"
                android:trackTint="@drawable/switch_selector"
                android:switchMinWidth="130dp"
                android:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>
