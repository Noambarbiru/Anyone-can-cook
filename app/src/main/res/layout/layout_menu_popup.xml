            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/red_dark"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/header_radioButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Font Size"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/fontSizeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"

                    android:layout_weight="1"
                    android:background="@color/red_dark"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/fontSize_S"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="S"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/fontSize_M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="M"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/fontSize_L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="L"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/fontSize_XL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="XL"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="30sp" />


                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/tutorialVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red_dark"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Watch Tutorial Video"
                android:textAllCaps="false"
                android:textSize="30sp" />

            <LinearLayout
